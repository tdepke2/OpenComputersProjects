all: full embed

full: mnet.lua
mnet.lua: mnet_src.lua
	simple_preprocess mnet_src.lua mnet.lua --local-env={OPEN_OS=true,USE_DLOG=true,EXPERIMENTAL_DEBUG=true}
	crunch mnet.lua mnet.cr.lua --tree --verbose

embed: mnet_embed.lua
mnet_embed.lua: mnet_src.lua
	simple_preprocess mnet_src.lua mnet_embed.lua --local-env={}
	crunch mnet_embed.lua mnet_embed.cr.lua --tree --verbose

.PHONY: clean
clean:
	rm -f mnet.* mnet_embed.*
